# TurboMart Environment Configuration
# Copy this file to .env.local and fill in the values

# CockroachDB - Update monthly with new account credentials
COCKROACH_DB_URL=postgresql://username:password@region-cluster.cockroachlabs.com:26257/turbomart?sslmode=verify-full

# Cloudflare R2 Configuration
NEXT_PUBLIC_R2_ENDPOINT=https://your-bucket-name.your-account.r2.cloudflarestorage.com
NEXT_PUBLIC_R2_BUCKET_NAME=turbomart-images
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key

# Cloudflare KV Configuration
CLOUDFLARE_KV_API_URL=https://api.cloudflare.com/client/v4/accounts/your-account-id/storage/kv/namespaces/your-namespace-id
CLOUDFLARE_KV_API_TOKEN=your-api-token
CLOUDFLARE_KV_NAMESPACE_ID=your-namespace-id

# Optional: Analytics
PLAUSIBLE_DOMAIN=turbomart.com 